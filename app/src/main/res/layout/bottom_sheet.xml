<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="110dp"
        app:layout_behavior="@string/bottom_sheet_behavior">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="6dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="4dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/shape_1" />

                    <LinearLayout
                        android:id="@+id/ll_tip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="15dp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="当前词汇"
                            android:textSize="8sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_1"
                            android:gravity="center_horizontal"
                            android:text="CET 4"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="记忆单词"
                            android:textSize="8sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_1"
                            android:gravity="center_horizontal"
                            android:text="1024"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="来到悠点"
                            android:textSize="8sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_1"
                            android:gravity="center_horizontal"
                            android:text="613"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_content"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Chronometer
                            android:id="@+id/tick"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/item"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp" />

                        <TextView
                            android:id="@+id/spell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="hello world"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/teal_200"
                            android:textSize="34sp"
                            android:layout_marginTop="30dp" />
                        <TextView
                            android:id="@+id/voice"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="voice"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginHorizontal="120dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/star1"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_weight="1"
                                android:src="@drawable/star_gray" />

                            <ImageView
                                android:id="@+id/star2"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1"
                                android:src="@drawable/star_gray" />

                            <ImageView
                                android:id="@+id/star3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight="2"
                                android:src="@drawable/star_gray" />

                            <ImageView
                                android:id="@+id/star4"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginTop="6dp"
                                android:layout_weight="1"
                                android:src="@drawable/star_gray" />

                            <ImageView
                                android:id="@+id/star5"
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_weight="1"
                                android:src="@drawable/star_gray" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="100dp" />

                        <TextView
                            android:id="@+id/item1"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="start|center"
                            android:paddingHorizontal="25dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#717274"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="40dp"
                            android:background="@drawable/shape_7"
                            android:text="v.中文意思" />

                        <TextView
                            android:id="@+id/item2"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="start|center"
                            android:paddingHorizontal="25dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#717274"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="40dp"
                            android:background="@drawable/shape_7"
                            android:text="v.中文意思" />

                        <TextView
                            android:id="@+id/item3"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="start|center"
                            android:paddingHorizontal="25dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#717274"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="40dp"
                            android:background="@drawable/shape_7"
                            android:text="v.中文意思" />

                        <TextView
                            android:id="@+id/item4"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:gravity="start|center"
                            android:paddingHorizontal="25dp"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#717274"
                            android:layout_marginTop="20dp"
                            android:layout_marginHorizontal="40dp"
                            android:background="@drawable/shape_7"
                            android:text="v.中文意思" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"/>
                        <ImageView
                            android:id="@+id/yes"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_easy"/>
                        <View
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"/>
                        <View
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"/>
                        <ImageView
                            android:id="@+id/no"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:src="@drawable/ic_hard"/>
                        <View
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="掌握"
                            android:textSize="10sp"
                            android:layout_weight="1"
                            tools:ignore="SmallSp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="收藏"
                            android:textSize="10sp"
                            android:layout_weight="1"
                            tools:ignore="SmallSp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_popupWindow"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改信息"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/numPicker1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:np_dividerColor="@color/teal_200"
            android:layout_marginHorizontal="40dp"
            app:np_textSize="14sp"
            app:np_dividerDistance="40dp"
            app:np_selectedTextSize="20sp"
            />
        <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/numPicker2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:np_dividerColor="@color/teal_200"
            android:layout_marginHorizontal="40dp"
            app:np_textSize="14sp"
            app:np_dividerDistance="40dp"
            app:np_selectedTextSize="20sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="5dp"
        android:clickable="true"
        android:text="保存"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:background="@drawable/back_select_1"
        android:focusable="true" />
</LinearLayout>